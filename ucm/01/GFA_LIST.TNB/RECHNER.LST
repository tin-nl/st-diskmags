DIM klmr$(50),klmr(50,1)
a$="543*x-8^3"
x=40
PRINT @rechner(a$)
FUNCTION rechner(a$)
  ' Taschenrechner V0.1
  ' (c) 1993 BIG Software
  ' Geschrieben von Christian Pick
  ' F„higkeiten:
  ' Punkt-vor-Strich-Rechnung, Klammerrechnung, Pi, Potenzrechnen
  ' Wurzel-Berechnung wie Potenz, jedoch durch z.B. 5#2
  ' Es kann mit der zuvor definierten Variable X gearbeitet werden...
  LOCAL a,b,c,n,b$,c$
  CLR a,b,n
  b$="+"
  a$="+"+UPPER$(a$)
  WHILE a$<>""
    b$=LEFT$(a$)
    a$=MID$(a$,2)
    IF LEFT$(a$)="("
      klmr$(n)=b$
      klmr(n,0)=a
      klmr(n,1)=b
      INC n
      CLR a,b
      b$="+"
      a$=MID$(a$,2)
    ELSE IF b$=")"
      a$=STR$(a+b)+a$
      DEC n
      b$=klmr$(n)
      a=klmr(n,0)
      b=klmr(n,1)
    ENDIF
    IF LEFT$(a$,2)="PI"
      c=PI
      a$=MID$(a$,3)
    ELSE IF LEFT$(a$,1)="X"
      c=x
      a$=MID$(a$,2)
    ELSE
      c$=LEFT$(a$,1)
      DO
        a$=MID$(a$,2)
        EXIT IF (LEFT$(a$,1)<"0" OR LEFT$(a$,1)>"9") AND LEFT$(a$,1)<>"."
        c$=c$+LEFT$(a$,1)
      LOOP
      c=VAL(c$)
    ENDIF
    IF b$="^"
      b=b^c
    ELSE IF b$="#"
      b=b^(1/c)
    ELSE IF b$="-"
      SUB a,b
      b=c
    ELSE IF b$="/"
      DIV b,c
    ELSE IF b$="*"
      MUL b,c
    ELSE
      ADD a,b
      b=c
    ENDIF
  WEND
  RETURN a+b
ENDFUNC
